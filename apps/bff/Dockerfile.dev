FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Habilitar conversões DOC/DOCX/PDF e timezone IANA (ZoneInfo)
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      libreoffice-writer \
      fonts-liberation \
      fonts-dejavu-core \
      fonts-dejavu-extra \
      tzdata \
 && rm -rf /var/lib/apt/lists/*

# Código do BFF
COPY app ./app
COPY run_dev.sh ./run_dev.sh
RUN chmod +x /app/run_dev.sh

# Porta do Uvicorn
EXPOSE 8000

CMD ["./run_dev.sh"]
